<h2><%= @recipe["title"] %></h2>
<h3>Chef: <%= @recipe["chef"] %></h3>
<h5>Prep Time: <%= @recipe["formatted"]["prep_time"] %></h5>

 <ul>
<% @recipe["formatted"]["ingredients"].each do |ingredient| %>
    <li><%= ingredient %></li>
<% end %>
 </ul>

 <ol>
<% @recipe["formatted"]["directions"].each do |direction| %>
    <li><%= direction %></li>
<% end %>
</ol>

<a href="/client/recipes/<%= @recipe["id"]%>/edit">Change this chum</a>

<br>
<br>

<%= form_tag "/client/recipes/#{ @recipe["id"] }", method: :delete do %>
  <input type="submit" value="GET RID OF IT! IT'S DISGUSTING!">
<% end %>

<img src="<%=@recipe["image_url"]%>">
